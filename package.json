{
  "name": "sc2galaxy",
  "displayName": "StarCraft 2 Galaxy Script",
  "description": "Language support for StarCraft 2 Galaxy Script",
  "version": "0.0.1",
  "publisher": "talv",
  "license": "ISC",
  "engines": {
    "vscode": "^1.16.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Talv/vscode-sc2-galaxy.git"
  },
  "keywords": [
    "sc2",
    "starcraft",
    "galaxy",
    "galaxy script"
  ],
  "categories": [
    "Languages"
  ],
  "activationEvents": [
    "onLanguage:galaxy"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "sc2galaxy",
      "properties": {
        "sc2galaxy.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "verbose",
          "description": "Traces the communication between VSCode and the Plaxtony language server."
        }
      }
    },
    "languages": [
      {
        "id": "galaxy",
        "aliases": [
          "SC2 Galaxy Script",
          "galaxy"
        ],
        "extensions": [
          ".galaxy"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "galaxy",
        "scopeName": "source.galaxy",
        "path": "./syntaxes/galaxy.json"
      }
    ],
    "snippets": [
      {
        "language": "galaxy",
        "path": "./snippets/general.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "node ./node_modules/vscode/bin/test"
  },
  "dependencies": {
    "fs": "0.0.2",
    "plaxtony": "^1.0.0",
    "vscode-languageclient": "^3.4.2"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.32",
    "@types/node": "^6.0.40",
    "mocha": "^2.3.3",
    "typescript": "^2.0.3",
    "vscode": "^1.1.5"
  }
}
